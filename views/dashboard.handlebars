{{#each postData }}

<div class="row post">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{title}}</span>
          <p>{{content}}</p>
        </div>
      </div>
    </div>
  </div>

{{/each}}


<div class="row">
    <h4>Have something else to share? Post here:</h4>
	<form class="col s12">
      <div class="row">
        <div class="input-field col s12">
        <textarea id="title-text" class="materialize-textarea"></textarea>
          <label for="title-text">Title</label>
        </div>
         <div class="input-field col s12">
          <textarea id="content-text" class="materialize-textarea"></textarea>
          <label for="content-text">Content</label>
          </div>
      </div>
      <button type="submit" id="add-post-button">Create New Post</button>
    </form>
</div>



<script src="/javascript/add-post.js"></script>