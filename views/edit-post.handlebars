  <h3>Edit Post</h3>
  <form class="edit-post-form">
    <div>
        <h4>Change Title</h4>
      <input name="post-title" type="text" value="{{title}}" />  
    </div>
    <div>
        <h4>Change Content</h4>
        <input name="post-content" type="text" value="{{content}}" />
